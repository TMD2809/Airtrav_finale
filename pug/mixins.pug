mixin tourItem(image, priceRange, title, amountReview, time, tourPrice ) 
                .tour-item
                    .tour-image-content
                        img.tour-image(src= image, alt='')
                        span.tour-amount From #{priceRange}
                    .tour-content
                        h3.tour-title= title 
                        .tour-rating
                            .rating
                                div
                                    img.star(src='./Img/Shape.png', alt='')
                                div
                                    span.rating-amount=amountReview 
                                        |   (12 reviews)
                            .tour-duration
                                span.duration-period Duration: #{time} hours
                        div
                            a.tour-cost(href='') Tours Price $#{tourPrice}
mixin popularItem(imgLink,time,title) 
                .popular-item 
                    .popular-image-content 
                        img.popular-image(src=imgLink)
                        .popular-gradient
                        a.popular-button(href="", target="_blank", rel="noopener noreferrer") Must See
                    .popular-content 
                        span.popular-time=time
                        h3.popular-title=title
                        .popular-rating     
                            div
                                img.rating-star(src="../Img/Shape.png")
                            div 
                                span.popular-rating-amount 4.8 (12 reviews)
mixin hiddenItem() 
                .hidden-item
                    .hidden-image-content
                        img.hidden-image(src= "./Img/blue-morning-natural-mountains-bamboo.png", alt='')
                        .hidden-gradient
                    .hidden-content
                        h3.hidden-title Bangkok Trip
                        span.hidden-time 27 Sep, 2020
